<?xml version="1.0" encoding="utf-8"?>
<org.techconnect.views.CommentsResourcesTabbedView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <android.support.design.widget.TabLayout
            android:id="@+id/tab_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <android.support.design.widget.TabItem
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:icon="@drawable/ic_picture_as_pdf_black_48dp"
                android:text="@string/resources" />

            <android.support.design.widget.TabItem
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:icon="@drawable/ic_question_answer_black_48dp"
                android:text="@string/comments">

            </android.support.design.widget.TabItem>


        </android.support.design.widget.TabLayout>

        <ImageButton
            android:id="@+id/controlButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_keyboard_arrow_up_black_24dp"
            android:background="@android:color/transparent"
            />
    </LinearLayout>
    <FrameLayout
        android:id="@+id/tabContentContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tab_layout">
        <include
            layout="@layout/resources_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </FrameLayout>
</org.techconnect.views.CommentsResourcesTabbedView>